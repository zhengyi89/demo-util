<hibernate-mapping>
    <class name="com.test.h2.pojo.User" table="User">
        <id name="userId" column="user_id" type="java.lang.Integer">
            <generator class="identity"></generator>
        </id>
        <property name="password" column="password" type="string"></property>
        <property name="userName" column="user_name" type="string"></property>
        <property name="createTime" column="create_time" type="timestamp"></property>
    </class>
</hibernate-mapping>