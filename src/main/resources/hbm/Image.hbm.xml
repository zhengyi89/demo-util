<hibernate-mapping>
    <class name="com.test.h2.pojo.Image" table="Image">
        <id name="imageId" column="image_id" type="long">
            <generator class="identity"></generator>
        </id>
        <property name="mobileId" column="mobile_id" type="int"></property>
        <property name="originalFileName" column="original_file_name" type="string"></property>
        <property name="thumbnailFileName" column="thumbnail_file_name" type="string"></property>
    </class>
</hibernate-mapping>